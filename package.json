{
  "name": "passman",
  "version": "1.0.0",
  "description": "Password Manager built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.1.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.yourname.passman",
    "productName": "PassMan",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.cache"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build"
    }
  }
}
